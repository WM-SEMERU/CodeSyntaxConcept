{
	"name": "Code Syntax Concept 1.0",
	//"image": "vsc-codesyntaxconcept-b6450add37b45ea5771471ffb96f60f8daaa6c97232a67b0fc572cec6e1a9bef",
	"build": { 
		"context": "..",
		"dockerfile": "Dockerfile",
		"args": {
			"NODE_VERSION": "none"
		}
	},
	"mounts": [
		"source=/nfs/semeru/projects/code_syntax_concept,target=/workspaces/CodeSyntaxConcept/data,type=bind,consistency=cached",
		"source=/nfs/semeru/data/dvc,target=/tf/dvc,type=bind,consistency=cached",
		"source=/scratch/danielrc/datax,target=/workspaces/CodeSyntaxConcept/datax,type=bind,consistency=cached"
	],
	"remoteEnv": {
        //"MY_PROJECT_NAME": "The-container-name-here" //NOTE: make this name the same as the folder containing the repo
        "MY_PROJECT_NAME": "CodeSyntaxConcept"
    },
	"runArgs": ["--gpus", "all", "-e", "GRANT_SUDO=yes","--name", "${localWorkspaceFolderBasename}-danielrc", "--add-host", "host.docker.internal:host-gateway"]	
}
