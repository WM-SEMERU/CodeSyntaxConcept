// https://github.com/microsoft/vscode-dev-containers/tree/v0.245.2/containers/python-3-miniconda
{
	"name": "Code Syntax Concept 1.0",
	"build": { 
		"context": "..",
		"dockerfile": "Dockerfile",
		"args": {
			"NODE_VERSION": "none"
		}
	},
	"settings": {
		//TODO: DRC mapping folders for data 
	},
	"mounts": [
		"source=/nfs/semeru/projects/code_syntax_concept,target=/workspaces/CodeSyntaxConcept/data,type=bind,consistency=cached",
		"source=/nfs/semeru/data/dvc,target=/tf/dvc,type=bind,consistency=cached"
	],	
	"extensions": [
		"ms-python.python"
	],
	"remoteEnv": {
        //"MY_PROJECT_NAME": "The-container-name-here" //NOTE: make this name the same as the folder containing the repo
        "MY_PROJECT_NAME": "CodeSyntaxConcept"
    },
	"runArgs": [ "--gpus", "all"]
}
